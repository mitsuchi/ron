syntax {
    e ::=                # 式
        n                # 数
      | e + e            # 足し算
    v ::= n              # 値
    n ::= <integer>      # 整数
}

context {
    E ::= e + _ | _ + v  # 評価文脈：左から順に簡約

    E [e1] ~> E [e2] {   # 評価文脈の簡約
        e1 ~> e2
    }
}

n1 + n2 ~> n3 {
    <n3 is n1 + n2>
}

e1 --> e2 {
    e1 ~> e3
    e3 --> e2
}

e --> e' {
    e ~> e'
}

