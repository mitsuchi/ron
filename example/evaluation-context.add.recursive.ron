syntax {
    e ::=                # 式
        n                # 数
      | e + e            # 足し算
    v ::= n              # 値
    n ::= <integer>      # 整数
}

# 評価文脈
context syntax {
    # 再帰的な文法：左から順に簡約
    E ::= _ | e + E | E + v
}

context rule {
    # 簡約規則
    E [e1] -> E [e2] {
        e1 -> e2
    }
}

n1 + n2 -> n3 {
    <n3 is n1 + n2>
}

e1 --> e2 {
    e1 -> e3
    e3 --> e2
}

e --> e' {
    e -> e'
}

